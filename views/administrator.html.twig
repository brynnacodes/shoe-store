<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Shoefinder</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Cabin:700|Source+Sans+Pro" rel="stylesheet">
    </head>
    <body>
        <div class="container-fluid">
            <div class="navbar">
                <ul class="nav-ul">
                  <li class="nav-li"><a href="/">Home</a></li>
                  <li class="nav-li"><a href="#">About</a></li>
                  <li class="nav-li"><a href="/administrator">Admin</a></li>
                </ul>
            </div>

            <div class="row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-4 listing-div">
                    <h3>Store Listings</h3>

                        {% if stores is not empty%}
                            {% for store in stores %}
                                <a href="/stores/{{store.getId}}"><p>{{ store.getName }}</p></a>
                            {% endfor %}
                        {% endif %}
                </div>
                <div class="col-sm-4 listing-div">
                    <h3>Brand Listings</h3>

                          {% if brands is not empty%}
                              {% for brand in brands %}
                                  <a href="/brands/{{brand.getId}}"><p>{{ brand.getName }}</p></a>
                              {% endfor %}
                          {% endif %}
                </div>
                <div class="col-sm-2">
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 left">
                </div>
                <div class="col-sm-4">
                    <h3 class="add-form">Add a Store</h3>
                    <form class="add-form" action="/add_store" method="post">
                        <label for="name">Add store name</label>
                        <input type="text" name="name">
                        <button class="btn add-button" type="submit">Add store</button>
                    </form>
                </div>
                <div class="col-sm-4">
                    <h3 class="add-form">Add a Brand</h3>
                    <form class="add-form" action="/add_brand" method="post">
                      <label for="name">Add brand name</label>
                      <input type="text" name="name">
                      <button class="btn add-button" type="submit">Add brand</button>
                    </form>
                </div>
                <div class="col-sm-2 right">
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 left">
                </div>
                <div class="col-sm-4">
                    <h3 class="add-form">Delete all stores</h3>
                    <form class="add-form" action="/delete_all_stores" method="post">
                        <button class="btn" type="submit" name="button">Delete stores</button>
                    </form>
                </div>
                <div class="col-sm-4">
                    <h3 class="add-form">Delete all brands</h3>
                    <form class="add-form" action="/delete_all_brands" method="post">
                      <button class="btn" type="submit" name="button">Add brand</button>
                    </form>
                </div>
                <div class="col-sm-2 right">
                </div>
            </div>
        </div>
    </body>
</html>
