<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>{{ brand.getName }}</h1>
            </div>

            <h3>Current store availability:</h3>
            <ul>
                {% if brand_stores is not empty %}
                    {% for store in brand_stores %}
                        <li>{{ store.getName }}</li>
                    {% endfor%}
                {% else %}
                    <p>No store availability at this time</p>
                {% endif %}
            </ul>

                <h3>Add store for this brand</h3>

                <form action="/brands/{{brand.getId}}/edit" method="post">
                    <label for="store">Choose a store:</label>
                    <select id="store" name="store">
                        {% for store in stores %}
                        <option value="{{store.getId}}">{{ store.getName }}</option>
                        {% endfor %}
                    </select>
                    <button type="submit" name="button">Add store</button>
                </form>

                <a href="/"><button>Home</button></a>

        </div>
    </body>
</html>
